{
  "name": "jl-rest",
  "type": "flogo:activity",
  "ref": "github.com/jvanderl/flogo-components/incubator/activity/rest",
  "version": "0.0.1",
  "title": "Invoke REST Service",
  "description": "Simple REST Activity",
  "homepage": "https://github.com/jvanderl/flogo-components/incubator/tree/master/activity/rest",
  "input":[
    {
      "name": "method",
      "type": "string",
      "required": true,
      "allowed" : ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    {
      "name": "uri",
      "type": "string",
      "required": true
    },
    {
      "name": "proxy",
      "type": "string",
      "required": false
    },
    {
      "name": "pathParams",
      "type": "params"
    },
    {
      "name": "queryParams",
      "type": "params"
    },
    {
      "name": "header",
      "type": "params"
    },
    {
      "name": "content",
      "type": "any"
    },
    {
      "name": "allowInsecure",
      "type": "boolean"
    }
  ],
  "output": [
    {
      "name": "result",
      "type": "any"
    },
    {
      "name": "status",
      "type": "integer"
    }
  ]
}
